rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check admin status based on users collection
    function isAdmin() {
      return request.auth != null
             && get(/databases/$(database)/documents/users/$(request.auth.uid))
                  .data.isAdmin == true;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards, etc.)
      allow read: if true;

      // Users can only create their own profile during signup
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.uid is string
                    && request.resource.data.uid.matches('^[0-9A-F]{15,16}')
                    && !exists(/databases/$(database)/documents/users/$(userId));

      // Users can only update their own profile
      allow update: if request.auth != null
                    && request.auth.uid == userId;

      // Nobody can delete user profiles
      allow delete: if false;
    }

    // Bot profiles - public read, admin write
    match /botProfiles/{botId} {
      // Public read
      allow read: if true;
      // Only admins can create/update/delete bot profiles
      allow create, update, delete: if isAdmin();
    }

    // Bot profile requests - authenticated users can create, server processes them
    match /botProfileRequests/{requestId} {
      // Anyone authenticated can read their own requests or admins can read all
      allow read: if request.auth != null &&
                    (resource.data.userUid == request.auth.uid || isAdmin());

      // Authenticated users can create requests with proper data
      allow create: if request.auth != null &&
                      request.resource.data.userUid == request.auth.uid &&
                      request.resource.data.keys().hasAll(['timestamp', 'userUid', 'botUid', 'botName', 'botArr', 'botCountry', 'processed']) &&
                      request.resource.data.processed == false;

      // Only server can update (to mark as processed)
      allow update, delete: if false;
    }

    // Progress tracking (future use)
    match /progress/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Results - users can delete their own results (document IDs ending with their UID)
    match /results/{resultId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow delete: if request.auth != null &&
                     resultId.matches('.*_' + get(/databases/$(database)/documents/users/$(request.auth.uid)).data.uid + '$');
    }
  }
}
